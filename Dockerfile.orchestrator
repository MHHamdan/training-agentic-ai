FROM python:3.11-slim

WORKDIR /app

# Copy root requirements (build context is the repo root)
COPY requirements.txt .

# Install Python dependencies
ENV PIP_DISABLE_PIP_VERSION_CHECK=1 \
    PIP_NO_CACHE_DIR=1 \
    PIP_PROGRESS_BAR=off \
    PYTHONDONTWRITEBYTECODE=1 \
    PYTHONUNBUFFERED=1

RUN python -m pip install --no-cache-dir --disable-pip-version-check -r requirements.txt --progress-bar off

# Copy the orchestrator app
COPY app.py .

# Create non-root user
RUN useradd -m -u 1000 app && chown -R app:app /app
USER app

# Set environment variables to reduce resource usage and prevent threading issues
ENV STREAMLIT_SERVER_MAX_UPLOAD_SIZE=200 \
    STREAMLIT_SERVER_ENABLE_STATIC_SERVING=false \
    STREAMLIT_SERVER_ENABLE_CORS=false \
    STREAMLIT_SERVER_ENABLE_XSRF_PROTECTION=false \
    STREAMLIT_SERVER_HEADLESS=true \
    STREAMLIT_BROWSER_GATHER_USAGE_STATS=false \
    STREAMLIT_SERVER_FILE_WATCHER_TYPE=none \
    STREAMLIT_SERVER_RUN_ON_SAVE=false \
    STREAMLIT_SERVER_ENABLE_WEBSOCKET_COMPRESSION=false \
    STREAMLIT_SERVER_MAX_MESSAGE_SIZE=200 \
    STREAMLIT_SERVER_ENABLE_STDOUT_LOGGING=false \
    STREAMLIT_SERVER_ENABLE_STDERR_LOGGING=false \
    STREAMLIT_SERVER_SHOW_ERROR_DETAILS=false \
    STREAMLIT_SERVER_SHOW_FILE_UPLOADER_API=false \
    STREAMLIT_SERVER_SHOW_DEBUG_INFO=false

# Expose port
EXPOSE 8500

# Run the orchestrator application with minimal threading
CMD ["streamlit", "run", "app.py", "--server.port=8500", "--server.address=0.0.0.0", "--server.headless=true", "--server.fileWatcherType=none", "--server.runOnSave=false", "--server.enableWebsocketCompression=false", "--server.maxMessageSize=200"]

