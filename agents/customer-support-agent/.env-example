# Customer Support Agent Configuration
# Copy this file to .env and update the values

# API Keys (Required)
GOOGLE_API_KEY=your_google_api_key_here
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Database Configuration
DATABASE_URL=sqlite:///customer_support.db
# For PostgreSQL: postgresql://username:password@host:port/database

# Redis Configuration (for short-term memory)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# Agent Configuration
MAX_MESSAGES=10
CONFIDENCE_THRESHOLD=0.7
ESCALATION_TIMEOUT=86400
AUTO_RESPONSE_ENABLED=true

# Memory Configuration
SHORT_TERM_TTL=3600
LONG_TERM_RETENTION_DAYS=365
MESSAGE_CACHE_LIMIT=10

# UI Configuration
UI_PORT=8502
UI_HOST=0.0.0.0
DEBUG_MODE=false

# Security Configuration
JWT_SECRET=change-this-in-production
ENCRYPTION_KEY=
RATE_LIMIT_PER_MINUTE=10
RATE_LIMIT_WINDOW=60

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=
ENABLE_ANALYTICS=true

# Business Configuration
BUSINESS_HOURS_START=9
BUSINESS_HOURS_END=17
TIMEZONE=UTC

# Escalation Configuration
AUTO_ESCALATE_COMPLEXITY=0.8
AUTO_ESCALATE_KEYWORDS=human,manager,supervisor,escalate

# Feature Flags
ENABLE_SENTIMENT_ANALYSIS=true
ENABLE_INTENT_CLASSIFICATION=true
ENABLE_HUMAN_HANDOFF=true
ENABLE_METRICS_COLLECTION=true

# Model Configuration
LLM_MODEL=gemini-1.5-flash
LLM_TEMPERATURE=0.3
LLM_MAX_TOKENS=2048
EMBEDDING_MODEL=models/embedding-001

# Notification Configuration
EMAIL_ENABLED=false
EMAIL_HOST=
EMAIL_PORT=587
EMAIL_USERNAME=
EMAIL_PASSWORD=

SLACK_ENABLED=false
SLACK_WEBHOOK_URL=
SLACK_CHANNEL=#customer-support

# Analytics Configuration
ANALYTICS_PROVIDER=internal
GOOGLE_ANALYTICS_ID=
MIXPANEL_TOKEN=

# Environment
ENVIRONMENT=development
