# Research Agent V2 Environment Configuration
# Copy this file to .env and fill in your API keys

# ========================================
# LANGFUSE OBSERVABILITY CONFIGURATION
# ========================================
LANGFUSE_SECRET_KEY=sk-lf-...
LANGFUSE_PUBLIC_KEY=pk-lf-...
LANGFUSE_HOST=https://cloud.langfuse.com
LANGFUSE_PROJECT=research-agent-v2
LANGFUSE_ORGANIZATION=research-org
LANGFUSE_ENVIRONMENT=production
LANGFUSE_TAGS=research,multi-agent,evaluation
LANGFUSE_ENABLED=true

# ========================================
# MODEL PROVIDER API KEYS
# ========================================

# OpenAI (Primary)
OPENAI_API_KEY=sk-...

# Anthropic (Claude)
ANTHROPIC_API_KEY=sk-ant-...

# Google (Gemini)
GOOGLE_API_KEY=AIza...

# Groq (Fast inference)
GROQ_API_KEY=gsk_...

# Hugging Face (Research models)
HUGGINGFACE_API_KEY=hf_...

# ========================================
# SEARCH AND RESEARCH APIs
# ========================================

# News API for news search
NEWS_API_KEY=...

# Finnhub for financial data
FINNHUB_API_KEY=...

# Alpha Vantage for additional data
ALPHA_VANTAGE_API_KEY=...

# Reddit API (optional)
REDDIT_CLIENT_ID=...
REDDIT_CLIENT_SECRET=...

# StockTwits (optional)
STOCKTWITS_ACCESS_TOKEN=...

# Polygon API (optional)
POLYGON_API_KEY=...

# ========================================
# RESEARCH CONFIGURATION
# ========================================

# Model settings
DEFAULT_MODEL=microsoft/phi-3-mini-4k-instruct
ENABLE_MODEL_COMPARISON=true
MAX_CONCURRENT_MODELS=3
RESEARCH_MODEL_PREFERENCE=scientific

# Search settings
MAX_SEARCH_RESULTS=20
ANALYSIS_DEPTH=comprehensive
CITATION_FORMAT=APA
FACT_CHECK_THRESHOLD=0.8
QUALITY_SCORE_MINIMUM=0.7

# Performance settings
MAX_RESEARCH_TIMEOUT_SECONDS=900
SEARCH_RESULT_LIMIT=50
SYNTHESIS_MAX_LENGTH=5000
EVALUATION_DEPTH=detailed

# ========================================
# APPLICATION SETTINGS
# ========================================

# Environment
ENVIRONMENT=production
DEBUG=false
LOG_LEVEL=INFO

# Research Agent specific
RESEARCH_AGENT_PORT=8514
AGENT_NAME=Research Agent V2
AGENT_VERSION=2.0.0

# Cache settings
CACHE_ENABLED=true
CACHE_TTL_SECONDS=3600
REDIS_URL=redis://localhost:6379

# ========================================
# OPTIONAL ADVANCED FEATURES
# ========================================

# Academic databases
PUBMED_ENABLED=true
ARXIV_ENABLED=true
WIKIPEDIA_ENABLED=true
DUCKDUCKGO_ENABLED=true

# Performance optimization
MAX_RETRIES=3
RETRY_DELAY_SECONDS=5
CONCURRENT_REQUESTS=10

# Security
ENABLE_RATE_LIMITING=true
MAX_REQUESTS_PER_MINUTE=60

# ========================================
# DEVELOPMENT SETTINGS
# ========================================

# Development mode (uncomment for dev)
# ENVIRONMENT=development
# DEBUG=true
# LOG_LEVEL=DEBUG
# LANGFUSE_ENVIRONMENT=development

# Testing (uncomment for testing)
# PYTEST_CURRENT_TEST=true
# SKIP_SLOW_TESTS=true