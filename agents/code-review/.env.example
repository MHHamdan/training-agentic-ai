# Production-Ready Code Review Agent Environment Configuration
# Author: Mohammed Hamdan
# Copy this file to .env and fill in your API keys

# =============================================================================
# REQUIRED: System API Keys (Pre-configured by admin)
# =============================================================================

# HuggingFace API Key (Required - Primary free provider)
HUGGINGFACE_API_KEY=your_huggingface_api_key_here

# =============================================================================
# OBSERVABILITY: LangSmith/AgentOps Integration
# =============================================================================

# LangSmith Configuration
LANGCHAIN_API_KEY=your_langsmith_api_key_here
LANGSMITH_PROJECT=code-review-agent-v2
LANGSMITH_ORGANIZATION=code-review-org

# AgentOps Configuration  
AGENTOPS_API_KEY=your_agentops_api_key_here
AGENTOPS_PROJECT=code-review-monitoring

# =============================================================================
# OPTIONAL: System Provider Keys (Fallback for enhanced analysis)
# =============================================================================

# OpenAI (Optional - GPT models for enhanced analysis)
OPENAI_API_KEY=sk-your_openai_api_key_here

# Anthropic (Optional - Claude models for advanced reasoning)
ANTHROPIC_API_KEY=sk-ant-your_anthropic_api_key_here

# Google AI (Optional - Gemini models for code analysis)
GOOGLE_API_KEY=AIza_your_google_api_key_here

# Groq (Optional - Fast inference)
GROQ_API_KEY=gsk_your_groq_api_key_here

# Mistral AI (Optional - European AI provider)
MISTRAL_API_KEY=your_mistral_api_key_here

# =============================================================================
# AGENT CONFIGURATION
# =============================================================================

# Basic Settings
AGENT_NAME=Code Review Agent V1
AGENT_VERSION=1.0.0
AGENT_PORT=8515
LOG_LEVEL=INFO

# Analysis Configuration
MAX_CODE_LENGTH=10000
ANALYSIS_TIMEOUT_SECONDS=300
ENABLE_SECURITY_SCAN=true
ENABLE_PERFORMANCE_ANALYSIS=true
ENABLE_STYLE_CHECK=true
ENABLE_COMPLEXITY_ANALYSIS=true

# Quality Thresholds
MIN_SECURITY_SCORE=7.0
MIN_PERFORMANCE_SCORE=6.0
MIN_STYLE_SCORE=8.0

# Model Configuration
DEFAULT_HF_MODEL=microsoft/CodeBERT-base
ENABLE_MODEL_COMPARISON=true
MAX_CONCURRENT_PROVIDERS=3
PROVIDER_TIMEOUT_SECONDS=60

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# Code Security
ENABLE_CODE_SANITIZATION=true
LOG_CODE_SNIPPETS=false
MASK_SENSITIVE_DATA=true
MAX_FILE_SIZE_MB=5

# Vulnerability Detection
DETECT_HARDCODED_SECRETS=true
DETECT_SQL_INJECTION=true
DETECT_XSS_VULNERABILITIES=true
DETECT_COMMAND_INJECTION=true

# =============================================================================
# OBSERVABILITY CONFIGURATION
# =============================================================================

# Tracing
ENABLE_TRACING=true
LOG_CODE_SNIPPETS=false
MASK_SENSITIVE_DATA=true

# Performance Monitoring
ENABLE_PERFORMANCE_MONITORING=true
TRACK_PROVIDER_PERFORMANCE=true
ENABLE_MODEL_COMPARISON_METRICS=true

# =============================================================================
# DEVELOPMENT/TESTING
# =============================================================================

# Development Mode
DEVELOPMENT_MODE=false
DEBUG_LOGGING=false
ENABLE_TEST_ENDPOINTS=false

# Testing Configuration
TEST_CODE_SAMPLES=true
MOCK_API_RESPONSES=false
ENABLE_PERFORMANCE_TESTS=true

# =============================================================================
# DEPLOYMENT CONFIGURATION
# =============================================================================

# Production Settings
PRODUCTION_MODE=true
ENABLE_RATE_LIMITING=true
MAX_REQUESTS_PER_MINUTE=100

# Monitoring
HEALTH_CHECK_INTERVAL=300
ERROR_REPORTING=true
METRICS_COLLECTION=true

# =============================================================================
# NOTES
# =============================================================================
# 
# 1. HUGGINGFACE_API_KEY is REQUIRED - this provides free access to code models
# 2. LangSmith/AgentOps keys enable full observability and monitoring
# 3. Other provider keys are OPTIONAL - users can provide their own via UI
# 4. Set PRODUCTION_MODE=true for production deployments
# 5. Adjust quality thresholds based on your requirements
# 6. Enable/disable specific analyses as needed
#
# For more information, see README.md
# =============================================================================